<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    >


    <LinearLayout
        android:id="@+id/addParkingMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/parkingDisableMsg1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:maxLines="2"
            android:textAlignment="center"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:text="This function only available on campus."
            android:visibility="gone"
            />

        <Button
            android:id="@+id/markParkingBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/parking_action_btn"
            android:text="Mark My Spot"
            android:textColor="@drawable/home_btn_text"
            android:textSize="15dp" />

        <Button
            android:id="@+id/cancelParkingBtn"
            android:layout_width="180dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/close_parking_btn"
            android:text="Cancel"
            android:textColor="@drawable/home_btn_text"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/removeParkingMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/parkingDisableMsg2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:maxLines="2"
            android:textAlignment="center"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:text="This function only available on campus."
            android:visibility="gone"
            />

        <Button
            android:id="@+id/TakeMeParkingBtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/parking_action_btn"
            android:text="Take Me To My Car"
            android:textColor="@drawable/home_btn_text"
            android:textSize="15dp" />

        <Button
            android:id="@+id/deleteParkingBtn"
            android:layout_width="180dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/parking_action_btn"
            android:text="Delete Parking"
            android:textColor="@drawable/home_btn_text"
            android:textSize="15dp" />

        <Button
            android:id="@+id/closeParkingBtn"
            android:layout_width="180dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/close_parking_btn"
            android:text="Close"
            android:textColor="@drawable/home_btn_text"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>
